{
  "manifest_version": 3,
  "name": "Censorship",
  "version": "1.0.0",
  "description": "Censorship is a browser extension that allows you to censor words or even the whole webpage",
  "author": "Hossein Amirhosseini",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"]
    }
  ],
  "action": {
    "default_popup": "src/extension/popup/popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "options_page": "src/extension/options/options.html"
}
